<form method="post"
  action="{{
  path(
    'app_Customer_delete',
    {
      id: Customer.id
    }
  )
  }}"
  onsubmit="return confirm('Are you sure you want to delete this item?');">
  <input type="hidden"
    name="_token"
    value="{{ csrf_token('delete' ~ Customer.id) }}" />
  <button class="btn">Delete</button>
</form>
