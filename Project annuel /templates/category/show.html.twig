{% extends 'base.html.twig' %}

{% block title %}
  Customer
{% endblock %}

{% block body %}
  <h1>
    Customer
  </h1>

  <table class="table">
    <tbody>
      <tr>
        <th>
          Id
        </th>
        <td>
          {{ Customer.id }}
        </td>
      </tr>
      <tr>
        <th>
          Name
        </th>
        <td>
          {{ Customer.name }}
        </td>
      </tr>
    </tbody>
  </table>

  <a href="{{ path('app_Customer_index') }}">back to list</a>

  <a href="{{
    path(
      'app_Customer_edit',
      {
        id: Customer.id
      }
    )
    }}">
    edit
  </a>

  {{ include('Customer/_delete_form.html.twig') }}
{% endblock %}
